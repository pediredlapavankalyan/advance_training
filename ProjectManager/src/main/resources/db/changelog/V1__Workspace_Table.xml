<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.0.xsd">

    <changeSet id="2" author="pavankalyan">
        <createTable tableName="Workspace">
            <column name="id" type="int" autoIncrement="true" startWith="20001" incrementBy="5" >
                <constraints primaryKey="true" />
            </column>
            <column name="name" type="varchar(30)">
                <constraints nullable="false"/>
            </column>
            <column name="created_user_id" type="int"  >
                <constraints nullable="false"  />
            </column>
        </createTable>
        <addForeignKeyConstraint baseTableName="Workspace"
                                 baseColumnNames="created_user_id"
                                 constraintName="fk_workspace_user"
                                 referencedTableName="User"
                                 referencedColumnNames="id"/>
    </changeSet>
    <!--inserting data -->
    <changeSet id="2.1" author="pk">
        <insert tableName="Workspace">
            <column name="name" value="project1" ></column>
            <column name="created_user_id" value="1001"/>
        </insert>
    </changeSet>
    <!--updating a row-->
    <changeSet id="2.2" author="pk">
        <update tableName="Workspace">
            <column name="name" value="projectk"/>
            <where> id=10001</where>
        </update>
    </changeSet>

    <changeSet id="create-table-test" author="pavankalyan">
        <createTable tableName="test">
            <column name="id" type="int" autoIncrement="true" startWith="20001" incrementBy="5" >
                <constraints primaryKey="true" />
            </column>
        </createTable>
        <rollback>
            <dropTable tableName="test"/>
        </rollback>
    </changeSet>
    <changeSet id="creatre-new-test" author="pavankalyan">
        <createTable tableName="test1">
            <column name="id" type="int" autoIncrement="true" startWith="20001" incrementBy="5" >
                <constraints primaryKey="true" />
            </column>
        </createTable>
        <rollback>
            <dropTable tableName="test1"/>
        </rollback>
    </changeSet>

</databaseChangeLog>
